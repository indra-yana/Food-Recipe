<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Header" parent="Theme.MaterialComponents.DayNight">
        <item name="android:textColor">@color/colorTextWhite100</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Header.H1" parent="Header">
        <item name="android:textSize">@dimen/_24ssp</item>
    </style>

    <style name="Header.H2" parent="Header">
        <item name="android:textSize">@dimen/_18ssp</item>
    </style>

    <style name="Header.H3" parent="Header">
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="Header.H4" parent="Header">
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="Header.H5" parent="Header">
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="Text" parent="Theme.MaterialComponents.DayNight">
        <item name="android:textColor">@color/colorTextBlack100</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Text.ItemTitle" parent="Text">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="Text.ItemTitle.Light" parent="Text.ItemTitle">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="Text.ItemDesc" parent="Text">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="Text.ItemDetailTitle" parent="Text.ItemTitle">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="Text.ItemDetailDesc" parent="Text.ItemDesc">
        <item name="android:maxLines">4</item>
        <item name="android:lineSpacingExtra">@dimen/_2sdp</item>
    </style>

    <style name="Text.Subtitle.Dark" parent="Text">
        <item name="android:textColor">@color/colorTextBlack100</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="Text.Subtitle.White" parent="Text">
        <item name="android:textColor">@color/colorTextWhite100</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="Text.Subtitle.White.Light" parent="Text.Subtitle.White">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="Text.InputSearch" parent="Theme.MaterialComponents.DayNight">
        <item name="android:textColor">@color/colorTextBlack100</item>
        <item name="android:textColorHint">@color/colorTextGrey60</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@null</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
        <item name="android:importantForAutofill" tools:targetApi="o">no</item>
    </style>

</resources>