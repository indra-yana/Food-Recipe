    <!--        app:layout_constraintEnd_toEndOf="@id/tvDifficulty"-->
    <!--        app:layout_constraintStart_toStartOf="@id/tvDifficulty"-->
    <!--        app:layout_constraintTop_toBottomOf="@id/tvDifficulty" />-->

    <TextView
        android:id="@+id/tvServing"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:fontFamily="@font/poppins_regular"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:textColor="@color/color_text_black_80"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintBottom_toTopOf="@id/viewSupporter"
        app:layout_constraintEnd_toEndOf="@+id/tvMisc"
        app:layout_constraintStart_toStartOf="@id/tvMisc"
        app:layout_constraintTop_toBottomOf="@id/tvMisc"
        tools:text="@string/text_lorem_ipsum_description" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/viewBackground"
        app:layout_constraintEnd_toEndOf="@+id/ivThumbnail"
        app:layout_constraintStart_toStartOf="@+id/ivThumbnail"
        app:layout_constraintTop_toBottomOf="@+id/ivThumbnail">

        <ImageButton
            android:id="@+id/btn_set_favourite"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:contentDescription="@string/app_name"
            android:foreground="?selectableItemBackground"
            android:includeFontPadding="false"
            android:src="@drawable/ic_favorite_border"
            android:textAllCaps="false"
            android:tint="@color/color_text_black_80" />

        <ImageButton
            android:id="@+id/btn_set_share"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:contentDescription="@string/app_name"
            android:foreground="?selectableItemBackground"
            android:includeFontPadding="false"
            android:src="@drawable/ic_share"
            android:textAllCaps="false"
            android:tint="@color/color_text_black_80" />

    </LinearLayout>

